<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/templates/head.ejs')  %>
  </head>
  <body style="background-color: #e5e5e5;">

    <div class="container-fluid">

      <%- include('partials/content/header.ejs')  %>

      <div class="row pt-3 pb-3 pr-0 title">

        <!-- <div class="col-2"></div> -->

        <div class="col">
          <div class="row w-100 justify-content-center">
            <img src="../../../images/FireAlone.png" alt="fireTakesLogo" style="height:48px;width:48px;">
            <h1 style="font-family: 'Courier New', Courier, monospace;text-align: center;"><span style="color:orangered;"> Fire</span><span style="color:orange"> Takes</span></h1>
          </div>
          <div class="row w-100 justify-content-center">
            <h1 style="font-family: 'Courier New', Courier, monospace;text-align: center;">one stop music talk</h1>
          </div>

            <!-- <b style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">==></b> -->

        </div>

        <!-- <div class="col-2"></div> -->

      </div>

      <div class="row">

        <div class="col d-flex justify-content-center">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="../images/rodeo.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="../images/birds.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="../images/jackboys.png" alt="Third slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        </div>

      </div>

      <!-- REGISTRATION SECTION -->

      <% if(!username) { %>
        <div class="row">
          <!-- <div class="col-2"></div> -->
          <div class="col questions" style="text-align: center;">
            <h3 class="duh mt-5 mb-2" style="text-align: center;">Think others will care about your opinion? </h3>
            <h3 class="yes mt-4 mb-2" style="text-align: center;">Want to share your music knowledge? </h3>
            <h3 class="pls mt-4 mb-2" style="text-align: center;">Register an account with us </h3>

          </div>
        </div>

        <div class="row">
          <div class="col-2"></div>
          <div class="col d-flex justify-content-center">
            <button id="reg" type="button" class="reg btn btn-lg btn-danger mt-5 mb-3" data-toggle="modal" data-target="#exampleModal"></button>
          </div>
          <div class="col-2"></div>
        </div>
      <% } %>


      <%- include('partials/content/footer.ejs')  %> 

    </div> <!-- end container fluid -->

    <!-- registration modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Register an account...</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/registration"  method="POST">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username">
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Confirm Password</label>
                <input type="password" class="form-control" id="passwordConfirm">
              </div>
              <div id="registerFailMessage" style="display:none;"class="alert alert-warning" role="alert">
                Username is already being used!
              </div>
              <div id="passwordFailMessage" style="display:none;"class="alert alert-warning" role="alert">
                Passwords do not match!
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" id="registerButton" class="btn btn-primary">Register</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>


    <%- include('partials/templates/defaults.ejs')  %> 
    <script src="/js/index.js" type="module" type="text/javascript"></script>
  </body>
</html>